{
  "name": "draw-and-share",
  "version": "1.0.0",
  "description": "Interactive drawing-to-anime installation",
  "private": true,
  "workspaces": [
    "server",
    "drawing-pad",
    "display-screen"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:pad\" \"npm run dev:display\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:pad": "npm run dev --workspace=drawing-pad",
    "dev:display": "npm run dev --workspace=display-screen",
    "build": "npm run build --workspaces",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
